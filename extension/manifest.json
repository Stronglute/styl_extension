{
  "manifest_version": 3,
  "name": "Image Button Extension",
  "version": "1.0",
  "description": "Adds a button to clothing images on a webpage.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["tf.js","content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}